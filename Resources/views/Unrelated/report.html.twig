{% extends "::backend.html.twig" %}
{% block content %}    
    <header>
        <h2>Resumen de elementos no relacionados</h2>
    </header>
<div class="span12">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>n</th>            
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for u in unrelated %}
            {% set entity = u.un.post %}
            <tr>
                <td>{{ entity }}</td>
                <td>{{  u.n }}</td>
                <td>
                    {% if entity.isPublished %}<i class="icon-ok"></i> {% endif %}
                    {% if not entity.isPublished %}<i class="icon-remove"></i> {% endif %}
                </td>
                <td>
                    <a class="bnt btn-mini" href="{{ url('post_publish', { 'id': entity.id }) }}" title="publish"><i class="icon-ok"></i></a>
                    <a class="bnt btn-mini" href="{{ url('post_unpublish', { 'id': entity.id }) }}" title="unpublish"><i class="icon-remove"></i></a>
                    <a class="bnt btn-mini" href="{{ url('post_edit', { 'id': entity.id }) }}" title="edit"> <i class="icon-edit"></i> </a>
                    <a class="bnt btn-mini" href="{{ url('post_preview', { 'id': entity.id }) }}" title="preview" target="_blank"> <i class="icon-eye-open"></i> </a>                    
                     
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>  
</div>    
{% endblock %}