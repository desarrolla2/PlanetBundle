<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <parameter key="planet.rss.class">Desarrolla2\RSSClient\RSSClient</parameter>
        <parameter key="planet.client.class">Desarrolla2\Bundle\PlanetBundle\Handler\Planet</parameter>
        <parameter key="planet.client.test.class">Desarrolla2\Bundle\PlanetBundle\Handler\PlanetTest</parameter>
    </parameters>
    
    <services>
        <service id="planet.rss" class="%planet.rss.class%" />           
        <service id="planet.client" class="%planet.client.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="planet.rss" />
        </service>
        
        <service id="planet.client.test" class="%planet.client.test.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="planet.rss" />
        </service>
    </services>
</container>
